<p style="color: green"><%= notice %></p>

<div class="container">
  <h1>Movies</h1>
  <%= link_to "New movie", new_movie_path %>
  <div id="movies">
    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col-4 py-2">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= movie.name %></h5>
              <%= link_to "Show this movie", movie, class: "btn btn-primary text-warning" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
