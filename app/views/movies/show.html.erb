<p style="color: green"><%= notice %></p>


<div class="col-4 py-2">
<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= @movie.name %></h5>
  </div>
  <div class="card-footer">
    <div class="btn-group my-3" role="group" aria-label="Basic mixed styles example">
      <%= link_to "Editar", edit_movie_path(@movie),class:'btn btn-outline-warning btn me-2' %>
      <%= link_to "Lista de peliculas", movies_path, class:"btn btn-outline-primary me-2" %>
      <%= button_to "Borrar", @movie, method: :delete, class:'btn btn-outline-danger' %>
    </div>

  </div>
</div>
</div>


